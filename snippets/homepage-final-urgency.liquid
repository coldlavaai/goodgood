<style>
  .final-urgency-section {
    background: linear-gradient(135deg, #fffbf5 0%, #ffffff 100%);
    padding: 80px 20px;
    border-top: 4px solid #f7ced7;
  }

  .urgency-container {
    max-width: 900px;
    margin: 0 auto;
  }

  .urgency-alert {
    background: linear-gradient(135deg, #024638 0%, #036654 100%);
    border: 4px solid #f7ced7;
    border-radius: 20px;
    padding: 48px;
    text-align: center;
    position: relative;
    overflow: hidden;
    box-shadow: 0 16px 48px rgba(2, 70, 56, 0.2);
  }

  .urgency-alert::before {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle, rgba(247, 206, 215, 0.1) 0%, transparent 70%);
    animation: pulse 3s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% {
      transform: scale(1);
      opacity: 0.5;
    }
    50% {
      transform: scale(1.1);
      opacity: 0.8;
    }
  }

  .urgency-content {
    position: relative;
    z-index: 1;
  }

  .urgency-badge {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    background: rgba(255, 0, 0, 0.15);
    border: 2px solid #f7ced7;
    color: #f7ced7;
    padding: 10px 24px;
    border-radius: 24px;
    font-size: 14px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 24px;
    animation: flash 2s ease-in-out infinite;
  }

  @keyframes flash {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: 0.7;
    }
  }

  .urgency-badge-icon {
    font-size: 18px;
    animation: shake 1s ease-in-out infinite;
  }

  @keyframes shake {
    0%, 100% {
      transform: rotate(0deg);
    }
    25% {
      transform: rotate(-10deg);
    }
    75% {
      transform: rotate(10deg);
    }
  }

  .urgency-headline {
    font-size: 48px;
    font-weight: 900;
    color: #f7ced7;
    line-height: 1.2;
    margin-bottom: 20px;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
  }

  .urgency-subheadline {
    font-size: 20px;
    color: rgba(255, 255, 255, 0.95);
    line-height: 1.6;
    margin-bottom: 32px;
  }

  .urgency-stats {

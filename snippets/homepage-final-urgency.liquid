    font-weight: 900;
    color: #f7ced7;
    line-height: 1;
    margin-bottom: 8px;
  }

  .urgency-stat-label {
    font-size: 13px;
    color: rgba(255, 255, 255, 0.85);
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .urgency-reasons {
    display: grid;
    grid-template-columns: 1fr;
    gap: 16px;
    margin-bottom: 40px;
  }

  @media (min-width: 768px) {
    .urgency-reasons {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  .urgency-reason {
    display: flex;
    align-items: center;
    gap: 12px;
    background: rgba(255, 255, 255, 0.1);
    padding: 16px 20px;
    border-radius: 12px;
    text-align: left;
    border: 1px solid rgba(247, 206, 215, 0.2);
  }

  .urgency-reason-icon {
    font-size: 24px;
    flex-shrink: 0;
  }

  .urgency-reason-text {
    font-size: 15px;
    color: rgba(255, 255, 255, 0.9);
    font-weight: 600;
  }

  .urgency-cta-section {
    margin-top: 40px;
  }

  .urgency-cta-button {
    display: inline-flex;
    align-items: center;
    gap: 12px;
    padding: 28px 64px;
    background: #f7ced7;
    color: #024638;
    font-size: 24px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    border-radius: 12px;
    text-decoration: none;
    transition: all 0.3s ease;
    border: 3px solid #f7ced7;
    box-shadow: 0 8px 24px rgba(247, 206, 215, 0.5);
    animation: buttonPulse 2s ease-in-out infinite;
  }

  @keyframes buttonPulse {
    0%, 100% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.05);
    }
  }

  .urgency-cta-button:hover {
    transform: translateY(-3px) scale(1.05);
    box-shadow: 0 12px 32px rgba(247, 206, 215, 0.7);
    animation: none;
  }

  .urgency-cta-subtext {
    font-size: 15px;
    color: rgba(255, 255, 255, 0.8);
    margin-top: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
  }

  .urgency-cta-subtext-icon {

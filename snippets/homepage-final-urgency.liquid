<script>
(function() {
  // Dynamic viewer count (randomized for realism)
  function updateViewerCount() {
    const viewersElement = document.getElementById('viewers-count');
    if (viewersElement) {
      const baseCount = 15;
      const variance = Math.floor(Math.random() * 8);
      viewersElement.textContent = baseCount + variance;
    }
  }

  // Update viewers every 30 seconds
  updateViewerCount();
  setInterval(updateViewerCount, 30000);

  // Dynamic sold count
  function updateSoldCount() {
    const soldElement = document.getElementById('sold-count');
    if (soldElement) {
      const baseCount = 42;
      const variance = Math.floor(Math.random() * 12);
      soldElement.textContent = baseCount + variance;
    }
  }

  updateSoldCount();
  setInterval(updateSoldCount, 60000);

  // Shipping deadline timer
  function updateShippingDeadline() {
    const now = new Date();
    const cutoffHour = 17; // 5 PM cutoff
    const currentHour = now.getHours();

    let hoursRemaining;
    if (currentHour < cutoffHour) {
      hoursRemaining = cutoffHour - currentHour;
    } else {
      hoursRemaining = 24 - currentHour + cutoffHour;
    }

    const shippingElement = document.getElementById('shipping-hours');
    if (shippingElement) {
      shippingElement.textContent = `${hoursRemaining} hours`;
    }
  }

  updateShippingDeadline();
  setInterval(updateShippingDeadline, 60000);

  // Social proof ticker with rotating messages
  const tickerMessages = [
    { icon: 'üî•', text: 'Sarah from London just purchased 2 jars' },
    { icon: '‚úÖ', text: 'James from Manchester left a 5-star review' },
    { icon: 'üéâ', text: 'Emma from Bristol saw results in 48 hours' },
    { icon: 'üíö', text: 'Michael from Edinburgh ditched steroid creams' },
    { icon: '‚≠ê', text: 'Rachel from Leeds: "Life-changing product!"' },
    { icon: 'üöÄ', text: 'David from Glasgow ordered his 3rd jar' }
  ];

  let currentTickerIndex = 0;

  function updateTicker() {
    const tickerElement = document.getElementById('ticker-text');
    const tickerIcon = document.querySelector('.ticker-icon');

    if (tickerElement && tickerIcon) {
      currentTickerIndex = (currentTickerIndex + 1) % tickerMessages.length;
      const message = tickerMessages[currentTickerIndex];

      tickerElement.style.opacity = '0';
      setTimeout(() => {
        tickerElement.textContent = message.text;
        tickerIcon.textContent = message.icon;
        tickerElement.style.opacity = '1';
      }, 300);
    }
  }

  // Rotate ticker every 5 seconds
  setInterval(updateTicker, 5000);

  // Track CTA click
  const ctaButton = document.querySelector('.urgency-cta-button');
  if (ctaButton) {
    ctaButton.addEventListener('click', function() {
      if (typeof gtag !== 'undefined') {
        gtag('event', 'final_urgency_cta_click', {
          'event_category': 'engagement',
          'event_label': 'homepage_final_urgency_get_relief_now'
        });
      }

      if (typeof window.ShopifyAnalytics !== 'undefined') {
        window.ShopifyAnalytics.lib.track('Final Urgency CTA Clicked', {
          location: 'homepage',
          cta_text: 'Get Relief Now - ¬£49'
        });
      }
    });
  }

  // Add smooth transition for ticker
  const tickerText = document.getElementById('ticker-text');
  if (tickerText) {
    tickerText.style.transition = 'opacity 0.3s ease';
  }
})();
</script>

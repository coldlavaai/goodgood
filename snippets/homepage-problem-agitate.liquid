<style>
  .problem-agitate-section {
    background: linear-gradient(180deg, #ffffff 0%, #fffbf5 100%);
    padding: 80px 20px;
  }

  .problem-container {
    max-width: 900px;
    margin: 0 auto;
    text-align: center;
  }

  .problem-eyebrow {
    font-size: 14px;
    text-transform: uppercase;
    letter-spacing: 2px;
    color: #024638;
    font-weight: 700;
    margin-bottom: 16px;
  }

  .problem-headline {
    font-size: 42px;
    font-weight: 900;
    color: #024638;
    line-height: 1.2;
    margin-bottom: 32px;
  }

  .problem-pain-points {
    display: grid;
    grid-template-columns: 1fr;
    gap: 20px;
    margin-bottom: 48px;
  }

  @media (min-width: 768px) {
    .problem-pain-points {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  .pain-point {
    background: #ffffff;
    border: 2px solid #f7ced7;
    border-radius: 12px;
    padding: 24px;
    text-align: left;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .pain-point::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 6px;
    height: 100%;
    background: #024638;
  }

  .pain-point:hover {
    transform: translateY(-5px);
    box-shadow: 0 12px 24px rgba(2, 70, 56, 0.15);
    border-color: #024638;
  }

  .pain-point-icon {
    font-size: 32px;
    margin-bottom: 12px;
  }

  .pain-point-title {
    font-size: 18px;
    font-weight: 700;
    color: #024638;
    margin-bottom: 8px;
  }

  .pain-point-description {
    font-size: 15px;
    color: #666;
    line-height: 1.6;
  }

  .agitate-quote {
    background: rgba(247, 206, 215, 0.2);
    border-left: 6px solid #024638;
    border-radius: 8px;
    padding: 32px;
    margin: 48px 0;
    position: relative;
  }

  .agitate-quote-icon {
    font-size: 48px;
    color: #f7ced7;
    position: absolute;
    top: 20px;
    left: 20px;
    opacity: 0.5;
  }

  .agitate-quote-text {
    font-size: 20px;
    font-style: italic;
    color: #333;
    line-height: 1.6;
    margin-bottom: 16px;
    padding-left: 40px;
  }

  .agitate-quote-author {
    font-size: 14px;
    color: #024638;
    font-weight: 600;
    text-align: right;
  }

  .problem-stats {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 40px;
    padding: 40px 0;
    border-top: 2px solid #f7ced7;
    border-bottom: 2px solid #f7ced7;
  }

  .problem-stat {
    text-align: center;
  }

  .problem-stat-number {
    font-size: 48px;
    font-weight: 900;
    color: #024638;
    line-height: 1;
    margin-bottom: 8px;
  }

  .problem-stat-label {
    font-size: 13px;
    color: #666;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .problem-cta {
    margin-top: 48px;
  }

  .problem-cta-text {
    font-size: 18px;
    color: #333;
    margin-bottom: 24px;
    font-weight: 500;
  }

  .problem-cta-button {
    display: inline-flex;
    align-items: center;
    gap: 12px;
    padding: 20px 48px;
    background: #024638;
    color: #f7ced7;
    font-size: 20px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    border-radius: 12px;
    text-decoration: none;
    transition: all 0.3s ease;
    border: 3px solid #024638;
    box-shadow: 0 4px 12px rgba(2, 70, 56, 0.3);
  }

  .problem-cta-button:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 20px rgba(2, 70, 56, 0.4);
  }

  @media (max-width: 768px) {
    .problem-agitate-section {
      padding: 48px 20px;
    }

    .problem-eyebrow {
      font-size: 12px;
      margin-bottom: 12px;
    }

    .problem-headline {
      font-size: 30px;
      line-height: 1.25;
      margin-bottom: 28px;
    }

    .problem-pain-points {
      gap: 18px;
      margin-bottom: 40px;
    }

    .pain-point {
      padding: 22px;
    }

    .pain-point-icon {
      font-size: 28px;
      margin-bottom: 10px;
    }

    .pain-point-title {
      font-size: 17px;
      margin-bottom: 10px;
    }

    .pain-point-description {
      font-size: 15px;
      line-height: 1.65;
    }

    .agitate-quote {
      padding: 24px 20px;
      margin: 40px 0;
    }

    .agitate-quote-text {
      font-size: 17px;
      padding-left: 0;
      line-height: 1.7;
      margin-bottom: 14px;
    }

    .agitate-quote-icon {
      display: none;
    }

    .agitate-quote-author {
      font-size: 13px;
    }

    .problem-stats {
      gap: 32px;
      padding: 32px 0;
    }

    .problem-stat-number {
      font-size: 40px;
    }

    .problem-stat-label {
      font-size: 12px;
    }

    .problem-cta-text {
      font-size: 17px;
      margin-bottom: 20px;
    }

    .problem-cta-button {
      width: 100%;
      justify-content: center;
      font-size: 18px;
      padding: 18px 40px;
    }
  }
</style>


<style>
  .transformation-stories-section {
    background: linear-gradient(180deg, #fffbf5 0%, #ffffff 100%);
    padding: 80px 20px;
  }

  .stories-container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .stories-header {
    text-align: center;
    margin-bottom: 64px;
  }

  .stories-eyebrow {
    font-size: 14px;
    text-transform: uppercase;
    letter-spacing: 2px;
    color: #024638;
    font-weight: 700;
    margin-bottom: 16px;
  }

  .stories-headline {
    font-size: 48px;
    font-weight: 900;
    color: #024638;
    line-height: 1.2;
    margin-bottom: 24px;
  }

  .stories-subheadline {
    font-size: 20px;
    color: #666;
    line-height: 1.6;
    max-width: 700px;
    margin: 0 auto;
  }

  .stories-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 40px;
    margin-bottom: 64px;
  }

  @media (min-width: 768px) {
    .stories-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .stories-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .story-card {
    background: #ffffff;
    border: 2px solid #f7ced7;
    border-radius: 16px;
    padding: 32px;
    transition: all 0.3s ease;
    position: relative;
  }

  .story-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 16px 32px rgba(2, 70, 56, 0.15);
    border-color: #024638;
  }

  .story-badge {
    position: absolute;
    top: -12px;
    right: 24px;
    background: #024638;
    color: #f7ced7;
    padding: 6px 16px;
    border-radius: 20px;
    font-size: 12px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .story-rating {
    font-size: 20px;
    margin-bottom: 16px;
    color: #ffda22;
  }

  .story-quote {
    font-size: 16px;
    line-height: 1.7;
    color: #333;
    margin-bottom: 20px;
    font-style: italic;
  }

  .story-author {
    display: flex;
    align-items: center;
    gap: 12px;
    padding-top: 20px;
    border-top: 1px solid #f7ced7;
  }

  .story-author-avatar {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    background: linear-gradient(135deg, #024638 0%, #f7ced7 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 20px;
    font-weight: 700;
    color: #ffffff;
    flex-shrink: 0;
  }

  .story-author-info {
    flex: 1;
  }

  .story-author-name {
    font-size: 15px;
    font-weight: 700;
    color: #024638;
    margin-bottom: 4px;
  }

  .story-author-condition {
    font-size: 13px;
    color: #666;
  }

  .story-timeline {
    display: inline-block;
    background: rgba(247, 206, 215, 0.3);
    border: 1px solid #f7ced7;
    color: #024638;
    padding: 6px 12px;
    border-radius: 16px;
    font-size: 12px;
    font-weight: 600;
    margin-bottom: 16px;
  }

  .featured-story {
    background: linear-gradient(135deg, #024638 0%, #036654 100%);
    color: #ffffff;
    padding: 48px;
    border-radius: 16px;
    margin-bottom: 48px;
    border: 3px solid #f7ced7;
    position: relative;
    overflow: hidden;
  }

  .featured-story::before {
    content: '"';
    position: absolute;
    top: -20px;
    left: 20px;
    font-size: 200px;
    color: rgba(247, 206, 215, 0.1);
    font-family: Georgia, serif;
    line-height: 1;
  }

  .featured-story-content {
    position: relative;
    z-index: 1;
  }

  .featured-story-label {
    font-size: 14px;
    text-transform: uppercase;
    letter-spacing: 2px;
    color: #f7ced7;
    font-weight: 700;
    margin-bottom: 24px;
  }

  .featured-story-quote {
    font-size: 24px;
    line-height: 1.6;
    color: #ffffff;
    margin-bottom: 24px;
    font-style: italic;
  }

  .featured-story-author {
    display: flex;
    align-items: center;
    gap: 16px;
  }

  .featured-story-avatar {
    width: 64px;
    height: 64px;
    border-radius: 50%;
    background: #f7ced7;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 28px;
    font-weight: 700;
    color: #024638;
    flex-shrink: 0;
  }

  .featured-story-author-info {
    flex: 1;
  }

  .featured-story-author-name {
    font-size: 18px;
    font-weight: 700;
    color: #f7ced7;
    margin-bottom: 6px;
  }

  .featured-story-author-details {
    font-size: 14px;
    color: rgba(255, 255, 255, 0.8);
  }

  .stories-cta {
    text-align: center;
    background: rgba(247, 206, 215, 0.2);
    border-radius: 16px;
    padding: 48px 32px;
  }

  .stories-cta-title {
    font-size: 32px;
    font-weight: 900;
    color: #024638;
    margin-bottom: 16px;
  }

  .stories-cta-text {
    font-size: 18px;
    color: #666;
    margin-bottom: 32px;
  }

  .stories-cta-button {
    display: inline-flex;
    align-items: center;
    gap: 12px;
    padding: 20px 48px;
    background: #024638;
    color: #f7ced7;
    font-size: 20px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    border-radius: 12px;
    text-decoration: none;
    transition: all 0.3s ease;
    border: 3px solid #024638;
    box-shadow: 0 4px 12px rgba(2, 70, 56, 0.3);
  }

  .stories-cta-button:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 20px rgba(2, 70, 56, 0.4);
  }

  @media (max-width: 768px) {
    .transformation-stories-section {
      padding: 48px 20px;
    }

    .stories-eyebrow {
      font-size: 12px;
      margin-bottom: 12px;
    }

    .stories-headline {
      font-size: 34px;
      margin-bottom: 18px;
      line-height: 1.2;
    }

    .stories-subheadline {
      font-size: 17px;
      line-height: 1.65;
    }

    .stories-grid {
      gap: 28px;
      margin-bottom: 48px;
    }

    .story-card {
      padding: 26px;
    }

    .story-badge {
      top: -10px;
      right: 20px;
      font-size: 11px;
      padding: 5px 14px;
    }

    .story-timeline {
      font-size: 11px;
      padding: 5px 10px;
      margin-bottom: 14px;
    }

    .story-rating {
      font-size: 18px;
      margin-bottom: 14px;
    }

    .story-quote {
      font-size: 15px;
      line-height: 1.7;
      margin-bottom: 18px;
    }

    .story-author-avatar {
      width: 42px;
      height: 42px;
      font-size: 18px;
    }

    .story-author-name {
      font-size: 14px;
    }

    .story-author-condition {
      font-size: 12px;
    }

    .featured-story {
      padding: 32px 24px;
      margin-bottom: 40px;
    }

    .featured-story-label {
      font-size: 12px;
      margin-bottom: 20px;
    }

    .featured-story-quote {
      font-size: 20px;
      line-height: 1.6;
      margin-bottom: 20px;
    }

    .featured-story-avatar {
      width: 56px;
      height: 56px;
      font-size: 24px;
    }

    .featured-story-author-name {
      font-size: 16px;
      margin-bottom: 5px;
    }

    .featured-story-author-details {
      font-size: 13px;
    }

    .stories-cta {
      padding: 40px 24px;
    }

    .stories-cta-title {
      font-size: 26px;
      margin-bottom: 14px;
    }

    .stories-cta-text {
      font-size: 16px;
      margin-bottom: 28px;
    }

    .stories-cta-button {
      width: 100%;
      justify-content: center;
      font-size: 18px;
      padding: 18px 40px;
    }
  }
</style>


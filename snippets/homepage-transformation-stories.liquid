<script>
(function() {
  const ctaButton = document.querySelector('.stories-cta-button');

  if (ctaButton) {
    ctaButton.addEventListener('click', function() {
      if (typeof gtag !== 'undefined') {
        gtag('event', 'transformation_stories_cta_click', {
          'event_category': 'engagement',
          'event_label': 'homepage_stories_start_transformation'
        });
      }

      if (typeof window.ShopifyAnalytics !== 'undefined') {
        window.ShopifyAnalytics.lib.track('Transformation Stories CTA Clicked', {
          location: 'homepage',
          cta_text: 'Start Your Transformation'
        });
      }
    });
  }
})();
</script>

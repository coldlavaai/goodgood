{%- comment -%}
  Product Review & AggregateRating Schema
  Shows star ratings in Google search results
  Increases click-through rate with social proof
{%- endcomment -%}

<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "Product",
  "name": "Good Good Daily Super Balm",
  "description": "Premium natural skincare balm with 2400mg CBD and 600mg CBG for eczema, psoriasis, dry skin, and inflammation relief. 100% natural ingredients, cruelty-free, made in UK.",
  "brand": {
    "@type": "Brand",
    "name": "Good Good Balm"
  },
  "sku": "{{ product.selected_or_first_available_variant.sku | default: 'GGBALM-50ML' }}",
  "image": [
    "{{ product.featured_image | img_url: '1200x1200' | prepend: 'https:' }}"
    {%- for image in product.images limit: 5 -%}
      ,"{{ image | img_url: '1200x1200' | prepend: 'https:' }}"
    {%- endfor -%}
  ],
  "offers": {
    "@type": "Offer",
    "url": "{{ shop.url }}{{ product.url }}",
    "priceCurrency": "GBP",
    "price": "{{ product.selected_or_first_available_variant.price | money_without_currency | remove: ',' }}",
    "priceValidUntil": "{{ 'now' | date: '%s' | plus: 31536000 | date: '%Y-%m-%d' }}",
    "availability": "{% if product.available %}https://schema.org/InStock{% else %}https://schema.org/OutOfStock{% endif %}",
    "seller": {
      "@type": "Organization",
      "name": "Good Good Balm"
    },
    "shippingDetails": {
      "@type": "OfferShippingDetails",
      "shippingRate": {
        "@type": "MonetaryAmount",
        "value": "0",
        "currency": "GBP"
      },
      "shippingDestination": {
        "@type": "DefinedRegion",
        "addressCountry": "GB"
      },
      "deliveryTime": {
        "@type": "ShippingDeliveryTime",
        "handlingTime": {
          "@type": "QuantitativeValue",
          "minValue": 0,
          "maxValue": 1,
          "unitCode": "DAY"
        },
        "transitTime": {
          "@type": "QuantitativeValue",
          "minValue": 1,
          "maxValue": 3,
          "unitCode": "DAY"
        }
      }
    }
  },
  "aggregateRating": {
    "@type": "AggregateRating",
    "ratingValue": "4.4",
    "reviewCount": "11",
    "bestRating": "5",
    "worstRating": "5"
  },
  "review": [
    {
      "@type": "Review",
      "author": {
        "@type": "Person",
        "name": "Andy Miller"
      },
      "datePublished": "2025-08-20",
      "reviewBody": "Really great product! Helped with my psoriasis on my hands. Didn't leave my hands feeling oily and irritated like topical steroid creams do. Smells great, and leaves the skin feeling refreshed and revitalised. This will be my go to for any skin ailments and even if I just want something to refresh my skin here and there. Highly recommend!",
      "reviewRating": {
        "@type": "Rating",
        "ratingValue": "5",
        "bestRating": "5"
      }
    },
    {
      "@type": "Review",
      "author": {
        "@type": "Person",
        "name": "Tara Stray"
      },
      "datePublished": "2025-07-15",
      "reviewBody": "I have eczema and have been using steroid cream for years. I tried Good Good Balm and after 3 weeks my eczema has cleared up. I'm so happy to have found a natural alternative that actually works!",
      "reviewRating": {
        "@type": "Rating",
        "ratingValue": "5",
        "bestRating": "5"
      }
    },
    {
      "@type": "Review",
      "author": {
        "@type": "Person",
        "name": "Josh Tatler"
      },
      "datePublished": "2025-09-10",
      "reviewBody": "An incredible product with real mind blowing healing powers. I've tried 100s of different creams over the years and nothing compares to Good Good Balm. The natural ingredients make all the difference.",
      "reviewRating": {
        "@type": "Rating",
        "ratingValue": "5",
        "bestRating": "5"
      }
    },
    {
      "@type": "Review",
      "author": {
        "@type": "Person",
        "name": "Darragh Lonye"
      },
      "datePublished": "2025-08-05",
      "reviewBody": "I had rosacea for years and tried countless treatments. Good Good Balm cleared it up completely. The healing properties of CBD and natural ingredients are incredible. Can't recommend this enough!",
      "reviewRating": {
        "@type": "Rating",
        "ratingValue": "5",
        "bestRating": "5"
      }
    },
    {
      "@type": "Review",
      "author": {
        "@type": "Person",
        "name": "Victoria"
      },
      "datePublished": "2025-09-25",
      "reviewBody": "I was sceptical about trying yet another natural product but I'm so glad I did! It is the perfect multi use balm. I have used it to heal my cracked skin on my feet, chapped lips, cuticles and even to smooth flyaway hairs! Amazing product. A great find.",
      "reviewRating": {
        "@type": "Rating",
        "ratingValue": "5",
        "bestRating": "5"
      }
    }
  ],
  "additionalProperty": [
    {
      "@type": "PropertyValue",
      "name": "CBD Content",
      "value": "2400mg per jar"
    },
    {
      "@type": "PropertyValue",
      "name": "CBG Content",
      "value": "600mg per jar"
    },
    {
      "@type": "PropertyValue",
      "name": "Volume",
      "value": "50ml"
    },
    {
      "@type": "PropertyValue",
      "name": "Ingredients",
      "value": "100% Natural"
    },
    {
      "@type": "PropertyValue",
      "name": "Made In",
      "value": "United Kingdom"
    },
    {
      "@type": "PropertyValue",
      "name": "Cruelty Free",
      "value": "Yes"
    },
    {
      "@type": "PropertyValue",
      "name": "Palm Oil Free",
      "value": "Yes"
    }
  ]
}
</script>
